<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <!-- The package metadata. Fill in the properties marked as TODO below -->
    <!-- Follow the instructions on https://learn.microsoft.com/en-us/nuget/create-packages/package-authoring-best-practices -->
    <PackageId>LightBDD.CLITemplates</PackageId>
    <PackageVersion>1.0</PackageVersion>
    <Title>LightBDD CLI Templates</Title>
    <Authors>LightBDD</Authors>
    <Description>A collection of Project Templates and Item Templates for LightBDD testing framework.</Description>
    <PackageTags>lightbdd;bdd;tdd;test;nunit;xunit;mstest;vstest;fixie</PackageTags>
    <PackageProjectUrl>https://github.com/LightBDD/LightBDD</PackageProjectUrl>
    <!-- Keep package type as 'Template' to show the package as a template package on nuget.org and make your template available in dotnet new search.-->
    <PackageType>Template</PackageType>
    <TargetFramework>net9.0</TargetFramework>
    <IncludeContentInPack>true</IncludeContentInPack>
    <IncludeBuildOutput>false</IncludeBuildOutput>
    <ContentTargetFolders>content</ContentTargetFolders>
    <NoWarn>$(NoWarn);NU5128</NoWarn>
    <NoDefaultExcludes>true</NoDefaultExcludes>
    <PackageReadmeFile>README.md</PackageReadmeFile>
    <PackageIcon>lightbdd_128.png</PackageIcon>
    <PackageLicenseFile>LICENSE.txt</PackageLicenseFile>
  </PropertyGroup>

  <PropertyGroup>
    <LocalizeTemplates>false</LocalizeTemplates>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="Microsoft.TemplateEngine.Tasks" Version="*" PrivateAssets="all" IsImplicitlyDefined="true" />
  </ItemGroup>

  <ItemGroup>  
    <Content Include="..\ItemTemplates\**\*" Exclude="..\ItemTemplates\**\bin\**;
             ..\ItemTemplates\**\obj\**;
             ..\ItemTemplates\**\*.vstemplate;
             ..\ItemTemplates\**\*.FeatureTemplate*;
             ..\ItemTemplates\**\.vs\**;">
        <PackagePath>content\ItemTemplates\</PackagePath>
    </Content>
    <Content Include="..\ProjectTemplates\**\*" Exclude="..\ProjectTemplates\**\bin\**;
             ..\ProjectTemplates\**\obj\**;
             ..\ProjectTemplates\**\*.vstemplate;
             ..\ProjectTemplates\**\*.ProjectTemplate*;
             ..\ProjectTemplates\**\.vs\**;">
        <PackagePath>content\ProjectTemplates\</PackagePath>
    </Content>
    <Compile Remove="**\*" />  
  </ItemGroup>

  <ItemGroup>
    <None Include="README.md" Pack="true" PackagePath="" />
    <None Include="lightbdd_128.png" Pack="true" PackagePath="" />
    <None Include="..\..\LICENSE.txt" Pack="true" PackagePath="" />
  </ItemGroup>

</Project>
